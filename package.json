{
	"name": "sandbox",
	"version": "3.2.0",
	"description": "Sandbox - Modern & Multipurpose Bootstrap 5 Template",
	"homepage": "https://sandbox.elemisthemes.com/",
	"author": "elemis",
	"private": true,
	"scripts": {
		"start": "node ./bin/watch.js",
		"build": "node ./bin/build.js",
		"serve:typo3": "npx gulp serve:typo3",
		"start-old": "npx gulp serve:typo3",
		"build-old": "npx gulp build:dist",
		"build:typo3:dist": "npx gulp build:typo3:dist",
		"build:typo3:dev": "npx gulp build:typo3:dev"
	},
	"devDependencies": {
		"autoprefixer": "10.4.5",
		"browser-sync": "~2.27.7",
		"del": "~6.0.0",
		"sass": "^1.58.0"
	},
	"dependencies": {
		"@alpinejs/collapse": "^3.11.1",
		"@alpinejs/focus": "^3.11.1",
		"@alpinejs/intersect": "^3.11.1",
		"@alpinejs/mask": "^3.11.1",
		"@alpinejs/morph": "^3.10.5",
		"@alpinejs/persist": "^3.11.1",
		"alpinejs": "^3.11.1",
		"dotenv": "^16.0.1",
		"esbuild": "^0.17.5"
	},
	"type": "module",
	"build": {
		"production": {
			"static": {
				"scss": {
					"dest": "./packages/eoi_site/Resources/Public/css",
					"source": "./src/css",
					"files": [
						"plugins"
					],
					"config": {
						"includePaths": [
							"node_modules"
						],
						"outputStyle": "compressed",
						"sourceMap": false
					}
				},
				"js": {
					"dest": "./packages/eoi_site/Resources/Public/js",
					"source": "./src/js",
					"files": [
						"plugins"
					],
					"config": {
						"parser": "babel-eslint",
						"parserOptions": {
							"sourceType": "module",
							"allowImportExportEverywhere": true
						}
					}
				}
			},
			"watch": {
				"scss": {
					"dest": "./packages/eoi_site/Resources/Public/css",
					"source": "./src/scss",
					"files": [
						"fonts",
						"override",
						"rte",
						"style"
					],
					"config": {
						"includePaths": [
							"node_modules"
						],
						"outputStyle": "compressed",
						"sourceMap": true
					}
				},
				"js": {
					"dest": "./packages/eoi_site/Resources/Public/js",
					"source": "./src/js",
					"files": [
						"theme",
						"user"
					],
					"config": {
						"sourceType": "module",
						"parser": "babel-eslint",
						"sourcemap": true,
						"parserOptions": {
							"sourceType": "module",
							"allowImportExportEverywhere": true
						}
					}
				}
			}
		}
	}
}
